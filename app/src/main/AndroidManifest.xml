<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codies.movieotic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.codies.movieotic.Views.Activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codies.movieotic.Views.Activities.SearchAcitivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.codies.movieotic.Views.Activities.MovieDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.codies.movieotic.Views.Activities.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codies.movieotic.Views.Activities.ProfileActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>